<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= settings.siteName || 'Ntando Modder Pro' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Background Music -->
    <% if (settings.backgroundMusic) { %>
    <audio id="bgMusic" loop>
        <source src="<%= settings.backgroundMusic %>" type="audio/mpeg">
    </audio>
    <% } %>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <% if (settings.logoUrl) { %>
                <img src="<%= settings.logoUrl %>" alt="Logo" height="40">
                <% } %>
                Ntando Modder Pro
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#services">Services</a></li>
                    <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
                    <li class="nav-item">
                        <button id="musicToggle" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-music"></i>
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section id="home" class="hero-section">
        <div class="container">
            <div class="row align-items-center min-vh-100">
                <div class="col-lg-6">
                    <h1 class="display-4 fw-bold text-white mb-4">
                        Welcome to <span class="text-primary">Ntando Modder Pro</span>
                    </h1>
                    <p class="lead text-light mb-4">
                        Your ultimate destination for modded apps, technology solutions, and premium services. 
                        We specialize in app modifications, website creation, WhatsApp bots, and deployment solutions.
                    </p>
                    <div class="d-flex gap-3">
                        <a href="#services" class="btn btn-primary btn-lg">Explore Services</a>
                        <a href="#contact" class="btn btn-outline-light btn-lg">Get Started</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-image">
                        <i class="fas fa-code display-1 text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="display-5 fw-bold">Our Services</h2>
                    <p class="lead">Professional technology solutions tailored to your needs</p>
                </div>
            </div>

            <!-- Service Categories -->
            <div class="row mb-4">
                <div class="col-12">
                    <ul class="nav nav-pills justify-content-center" id="serviceCategories">
                        <li class="nav-item">
                            <a class="nav-link active" data-category="all">All Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-category="modded-apps">Modded Apps</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-category="website-creation">Website Creation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-category="premium-apps">Premium Apps</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-category="whatsapp-bots">WhatsApp Bots</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-category="modifications">Modifications</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-category="deployment">Deployment</a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Services Grid -->
            <div class="row" id="servicesGrid">
                <% services.forEach(service => { %>
                <div class="col-lg-4 col-md-6 mb-4 service-card" data-category="<%= service.category %>">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><%= service.name %></h5>
                            <p class="card-text"><%= service.description %></p>
                            <div class="mb-3">
                                <strong>Features:</strong>
                                <ul class="list-unstyled mt-2">
                                    <% service.features.forEach(feature => { %>
                                    <li><i class="fas fa-check text-success me-2"></i><%= feature %></li>
                                    <% }); %>
                                </ul>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="h5 text-primary mb-0"><%= service.price %></span>
                                <small class="text-muted"><%= service.duration %></small>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-primary w-100 order-btn" 
                                    data-service="<%= service.name %>" 
                                    data-price="<%= service.price %>">
                                Order Now
                            </button>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h2 class="display-5 fw-bold mb-4">About Ntando Modder Pro</h2>
                    <p class="lead">
                        We are a leading technology service provider specializing in app modifications, 
                        custom software development, and digital solutions.
                    </p>
                    <div class="row mt-4">
                        <div class="col-6">
                            <div class="text-center">
                                <h3 class="text-primary">500+</h3>
                                <p>Projects Completed</p>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-center">
                                <h3 class="text-primary">100+</h3>
                                <p>Happy Clients</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-12 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-mobile-alt fa-2x text-primary me-3"></i>
                                <div>
                                    <h5>Mobile App Modifications</h5>
                                    <p class="mb-0">Expert app modding and customization services</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-globe fa-2x text-primary me-3"></i>
                                <div>
                                    <h5>Website Development</h5>
                                    <p class="mb-0">Professional website creation and deployment</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="d-flex align-items-center">
                                <i class="fab fa-whatsapp fa-2x text-primary me-3"></i>
                                <div>
                                    <h5>WhatsApp Bot Development</h5>
                                    <p class="mb-0">Custom WhatsApp automation solutions</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2 class="display-5 fw-bold">Get In Touch</h2>
                    <p class="lead">Ready to start your project? Contact us today!</p>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <form id="contactForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <input type="text" class="form-control" name="name" placeholder="Your Name" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <input type="email" class="form-control" name="email" placeholder="Your Email" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <select class="form-select" name="service" required>
                                <option value="">Select a Service</option>
                                <% services.forEach(service => { %>
                                <option value="<%= service.name %>"><%= service.name %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <textarea class="form-control" name="message" rows="5" placeholder="Your Message" required></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Ntando Modder Pro</h5>
                    <p>Your trusted technology partner for all modding and development needs.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="social-links">
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-linkedin"></i></a>
                    </div>
                    <p class="mt-2">© 2024 Ntando Modder Pro. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Order Modal -->
    <div class="modal fade" id="orderModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Order Service</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="orderForm">
                        <div class="mb-3">
                            <label class="form-label">Service</label>
                            <input type="text" class="form-control" id="orderService" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Price</label>
                            <input type="text" class="form-control" id="orderPrice" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Your Name</label>
                            <input type="text" class="form-control" name="customerName" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Your Email</label>
                            <input type="email" class="form-control" name="customerEmail" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Additional Requirements</label>
                            <textarea class="form-control" name="requirements" rows="3"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="submitOrder">Place Order</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
